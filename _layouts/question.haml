---
layout: default
---
.row.align-items-sm-center.justify-content-center.h-100.mt-4.mt-sm-0
  .col.col-sm-8.col-md-6.text-center
    %form
      {% assign answers = site.data.answers[page.type] %}
      {% include question/question.haml text=page.text type=page.type
      position=page.position answers=answers %}
.fixed-bottom.bg-white
  .row.justify-content-center.p-3
    .col.col-sm-8.col-md-6.text-center.px-sm-5
      .progress
        .progress-bar.bg-info#questionProgress{"aria-valuemax": "100",
          "aria-valuemin": "0", "aria-valuenow": "0", role: "progressbar",
          style: "width: 0%"}
  .row.justify-content-center.p-3
    .col.col-sm-8.col-md-6.text-center.px-sm-5
      {% if page.position > 1 %}
      %a.btn.btn-secondary.float-left#prev{ href: "{{ page.position | minus: 1 | datapage_url: page.dir }}" }
        Prev
      {% endif %}
      {% if page.position < 10 %}
      %a.btn.btn-secondary.float-right#next{ href: "{{ page.position | plus: 1 | datapage_url: page.dir }}" }
        Next
      {% endif %}
